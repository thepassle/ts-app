{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
